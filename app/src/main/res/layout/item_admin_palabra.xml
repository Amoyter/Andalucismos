<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">


        <LinearLayout
            android:id="@+id/lyBotonesAdminRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtnAnadirPalabra"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/blanco"
                android:padding="8dp"
                android:src="@drawable/ic_aceptar"
                app:tint="@color/verdeOscuro" />

            <ImageButton
                android:id="@+id/imgBtnEliminarAdmin"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toStartOf="@+id/imgBtnAnadirPalabra"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/blanco"
                android:padding="8dp"
                android:src="@drawable/ic_eliminar"
                app:tint="#FF0000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lyBotonesAdminRv"
            android:layout_toStartOf="@+id/lyBotonesAdminRv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/txtPalabraAdminRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toLeftOf="@+id/lyBotonesAdminRv"
                android:textStyle="bold"
                android:text="(Placeholder)Palabra" />

            <TextView
                android:id="@+id/txtSignificadoAdminRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/lyBotonesAdminRv"
                android:layout_marginTop="4dp"
                android:text="(Placeholder)Significado" />

            <TextView
                android:id="@+id/txtEjemploAdminRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toLeftOf="@+id/lyBotonesAdminRv"
                android:layout_marginTop="4dp"
                android:text="(Placeholder)Ejemplo" />

            <TextView
                android:id="@+id/txtUbicacionAdminRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/lyBotonesAdminRv"
                android:layout_marginTop="4dp"
                android:text="(Placeholder)Ubicacion" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>